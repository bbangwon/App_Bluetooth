                   AbsoluteLayout.LayoutFlags="All"
                   AbsoluteLayout.LayoutBounds="0.5,.2,0.5,.1" 
                   HorizontalOptions="CenterAndExpand"
                   />            

            <Label x:Name="lblTemp" TextColor="White" Text="00 ℃"
                   FontSize="Default"
